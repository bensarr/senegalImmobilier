{% extends 'accueil.html.twig' %}

{% block title %}Réglement{% endblock %}

{% block body %}
    <div class="container col-md-12 mt-5">
        <div class="card bg-transparent">
            {% for message in app.flashes('warning') %}
                <div class="card-header flash-notice alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('notice') %}
                <div class="card-header flash-notice alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            <div class="card-header bg-dark text-light text-left">
                Liste des Réglements
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <tr>
                        <th>Numero</th>
                        <th>Date Réglement</th>
                        <th>Montant</th>
                        <th>Agent</th>
                        <th>Client</th>
                    </tr>
                    {% for r in reglements %}
                        <tr>
                            <td>{{ r.num }} </td>
                            <td>{{ r.date|date('d/m/y')  }} </td>
                            <td>{{ r.montant }} </td>
                            <td>
                                <u>Nom:</u> {{ r.agent.nom }} <br>
                                <u>Prénom:</u> {{ r.agent.prenom }}
                            </td>
                            <td>
                                <u>Nom:</u> {{ r.facture.operation.client.nom }} <br>
                                <u>Prénom:</u> {{ r.facture.operation.client.prenom }}
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}